{
  "root": true,

  "extends": "eslint:recommended",

  "parser": "babel-eslint",

  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },

  "plugins": [
    "markdown"
  ],

  "globals": {
    "__DEV__": true
  },

  "rules": {
    "no-undef": 2,
    "no-unreachable": 2,
    "no-unused-vars": 0,
    "no-console": 0,
    "semi": ["error", "always"]
  },

  "overrides": [
    {
      "files": ["src/content/**/*.md"],
      "parserOptions": {
        "codeFrame": true,
      },
      "rules": {
        "indent": ["error", 2],
        "no-undef": 0,
        "no-constant-condition": 0,
        "no-useless-escape": 0,
        "no-unused-labels": 0,
        "no-use-before-define": 0,
        "no-dupe-keys": 0
      }
    }
  ]
}
